<div class="row">
  <div class="col-xs-12">

    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

     <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :username %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username , class:"form-control", placeholder: "Enter username", autofocus: true %>
        </div>
     </div>

    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= f.label :password %>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password,  class:"form-control", placeholder: "Enter password", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= f.label "Re-enter Password" %>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password_confirmation,  class:"form-control", placeholder: "Confirm Password", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit(@user.new_record? ? "Sign up" : "Update Account", class:"btn btn-primary btn-lg") %>
      </div>
    </div>

    <% end %>

  </div>
</div>